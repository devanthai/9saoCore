<script>
  $(document).ready(function () {
    $("#modalThongBaoVip").modal("show");
  });

  var table = document.getElementById("tableCard");
  var tb = document.getElementById("alert");
  var btn = document.getElementById("btn");




  load = () => {
    $.ajax({
      url: "/user/napbank",
      type: "POST",
      dataType: "json",
      contentType: "application/json; charset=utf-8",
      data: JSON.stringify({
        type: "get"
      }),
      success: function (res) {
        console.log(res)

        var tablez = "";
        if (res.length > 0) {
          res.forEach(function (data, index) {
            var mess = "";
            //     console.log(data.status)
            mess = '<span class="badge badge-success" style="padding: 5px">' + data.status + " (+" + numberWithCommas(data.thucnhan) + "$)" + '</span>'
            if (data.isRemoveVip) {
              mess = mess + '-<span class="badge badge-danger" style="padding: 5px">Đã xóa</span>'
            }
            tablez = "<tr>  <td>" + mess + "</td> <td>" + new Date(Date.parse(data.time)).toLocaleString() + "</td>  <td>" + numberWithCommas(data.sotien) + "đ" + "</td> <td>" + numberWithCommas(data.thucnhan) + "$</td>  </tr>" + tablez;

          })
        }
        if (res.length == 0) {
          tablez = '<tr class="text-center"> <td colspan="6">Bạn chưa thực hiện giao dịch nào</td> </tr>'
        }
        table.innerHTML = tablez
      }
    })
  }
  setInterval(() => {
    load()
  }, 5000)
  load()

</script>