    function view() {
      var viewimage = document.getElementById("viewimage");
      viewimage.hidden = !viewimage.hidden;
    }
    var table = document.getElementById("tableCard");
    var tb = document.getElementById("alert");
    var btn = document.getElementById("btn");
    btn.addEventListener("click", function() {
      tb.innerHTML = "";
      var gold = document.getElementById("gold").value;
      var id = document.getElementById("id").value;
      if (gold.length == 0 || id.length == 0) {
        tb.innerHTML = '<div class="alert alert-danger" role="alert"><strong>Thất bại!</strong> Vui lòng kiễm tra lại thông tin!</div>';
        return;
      }
      tb.innerHTML = "";
      btn.disabled = true;
      btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';
      var http = new XMLHttpRequest();
      var url = "/user/napgt1s";
      var params = $("#form").serialize();
      http.open('POST', url, true);
      http.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
      http.onreadystatechange = function() {
        if (http.readyState == 4 && http.status == 200) {
          var response = JSON.parse(http.responseText);

            if(response.error==0)
            {
                tb.innerHTML = thongbao('success',response.message);
            } else{
                tb.innerHTML = thongbao('danger',response.message);

            }
        //  table.children[1].innerHTML = response.table + table.children[1].innerHTML;
          btn.disabled = false;
          btn.innerHTML = '<span class="fas fa-key"></span> NẠP NGAY';
          load()

          document.getElementById("form").reset();
        }
      }
      http.send(params);
    });
  



    load = () => {
        $.ajax({
            url: "/user/napgt1s",
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                type: "get"
            }),
            success: function (res) {
                console.log(res)
              
                var tablez = "";
                if(res.length>0){
                res.forEach(function (data, index) {
                    var mess = "";
               //     console.log(data.status)
                   mess = '<span class="badge badge-success" style="padding: 5px">'+data.status+" (+"+numberWithCommas(data.thucnhan)+"$)"+'</span>'
                    tablez = "<tr>  <td>" +mess + "</td> <td>" +new Date(Date.parse(data.time)).toLocaleString()+ "</td> <td>" + data.magd+ "</td> <td>" + numberWithCommas(data.sotien)+"đ" + "</td> <td>" + numberWithCommas(data.thucnhan) + "$</td>  </tr>"+tablez;
                  
                })}
                if(res.length==0)
                {
                    tablez= '<tr class="text-center"> <td colspan="6">Bạn chưa thực hiện giao dịch nào</td> </tr>'
                }
                table.innerHTML =  tablez
            }
        })
    }
    setInterval(()=>{
        load()
    },5000)
